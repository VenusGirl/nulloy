#!/usr/bin/make -f

export DH_COMPAT=5


LSB_CODENAME := $(shell lsb_release -cs)

ifeq ($(LSB_CODENAME), squeeze)
CONFIG_FLAGS += --no-gstreamer-tagreader
endif

ifeq ($(LSB_CODENAME), lucid)
CONFIG_FLAGS += --no-gstreamer-tagreader
endif


build: build-stamp
build-stamp:
	dh_testdir
	QMAKE=qmake-qt4 LRELEASE=lrelease-qt4 ./configure --taglib --no-update-check --prefix=/usr $(CONFIG_FLAGS)
	make
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	make clean || true
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	make install INSTALL_ROOT=$(CURDIR)/debian/tmp

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_install
	dh_installchangelogs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install

